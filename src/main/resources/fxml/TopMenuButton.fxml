            <ImageView fitHeight="46.0" fitWidth="47.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../icons/statistic_icon.png" />
               </image>
            </ImageView>
         </graphic></ToggleButton>
      <Button graphicTextGap="5.0" mnemonicParsing="false" onAction="#addBook" prefHeight="80.0" prefWidth="150.0" text="%add_book">
