      </ToggleButton>
      <ToggleButton alignment="CENTER_LEFT" mnemonicParsing="false" onAction="#openListBooks" prefHeight="80.0" prefWidth="150.0" text="%list.book" toggleGroup="$toggleButton">
         <graphic>
            <ImageView fitHeight="38.0" fitWidth="54.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../icons/list_icon.png" />
               </image>
            </ImageView>
         </graphic></ToggleButton>
      <ToggleButton alignment="CENTER_LEFT" mnemonicParsing="false" onAction="#openStatistic" prefHeight="80.0" prefWidth="150.0" text="%stata" toggleGroup="$toggleButton">
